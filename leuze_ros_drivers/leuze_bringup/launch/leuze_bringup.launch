<?xml version="1.0"?>
<launch>

<arg name="sensor_ip" default="192.168.0.50" />
<arg name="port" default="5120" />
<arg name="debug" default="false" />

<include file="$(find leuze_description)/launch/rsl400_upload.launch"/>

<node name="leuze_rsl_node" type="leuze_rsl_driver" pkg="leuze_rsl_driver" output="screen" args="$(arg sensor_ip) $(arg port)">
    <rosparam command="load" file="$(find leuze_rsl_driver)/config/params.yaml" />
    <param name="ls_debug" value="$(arg debug)"/>
    <remap from="scan" to="/scan"/>
    <remap from="status" to="/status"/>    
</node>

<node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher">
    <param name="publish_frequency" type="double" value="5.0" />
  </node>

</launch>
